{% extends "base.html.twig" %}

{% block title %}All my Recipes
{% endblock %}

{% block body %}
	<main class="d-flex flex-column gap-5">
		<h1>Cuisinons Ensemble !</h1>
		<a class="btn btn-primary m-auto" href={{path('recipe_create')}}>Cr√©er</a>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Titre</th>
					<th colspan="2">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for recipe in recipes %}
					<tr>
						<td>
							<a href={{path('recipe_show', {id: recipe.id, slug: recipe.slug} )}}>{{recipe.title}}</a>
						</td>
						<td>
							<div class="d-flex gap-2">
								<a class="btn btn-warning" href={{path('recipe_edit', {id: recipe.id} )}}>Editer</a>
								<form action={{path('recipe_delete', {id: recipe.id} )}} method="post">
								<input type="hidden" name="_method" value="DELETE">
									<button type="submit" class="btn btn-danger">Supprimer</button>
								</form>
							</div>

						</td>
					</tr>

				{% endfor %}
			</tbody>
		</table>
		<ul></ul>
	</main>

{% endblock %}
